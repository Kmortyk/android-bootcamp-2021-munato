<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CollectionFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/collection_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabInlineLabel="true">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/collection_tab_my"
            android:icon="@drawable/outline_face_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_collection_my" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/collection_tab_favourites"
            android:icon="@drawable/outline_favorite_border_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_collection_favourites"
            />
    </com.google.android.material.tabs.TabLayout>
</FrameLayout>